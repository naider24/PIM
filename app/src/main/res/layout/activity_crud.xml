<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="20dp">


    <!-- LinearLayout para o cabeçalho "Market Place" -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textSize="24sp"
            android:textColor="#1e2ffd"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/dotsMenu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/pontos"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginStart="150dp"
            android:contentDescription="Opções" />
    </LinearLayout>

    <!-- LinearLayout para a barra de pesquisa de produto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="16dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Pesquisar Produto"
            android:textColorHint="#A0A0A0"

            android:paddingEnd="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:contentDescription="Pesquisar"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="70dp"

        android:layout_marginEnd="16dp">

        <!-- Categoria: Ofertas -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ofertas"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="5dp" />

        <!-- Categoria: Destaque (selecionado) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Destaque"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#1e2ffd"
            android:gravity="center"
            android:padding="5dp" />

        <!-- Categoria: Mais Vendidos -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mais Vendidos"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

    <!-- Card 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Produto 1"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 99,99"
                android:textSize="16sp"
                android:textColor="#1e2ffd"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>